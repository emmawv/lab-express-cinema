<div class="container page">
    <div class='row justify-content-space-between align-items-center'>
        <div class="col-4">
            <img src="{{image}}" alt="Movie poster">
        </div>
        <div class="col-8">
            <a href="/movies">Go back</a>
            <h1>{{title}}</h1>
            <h2>Director:{{director}}</h2>
            <h3>Stars:</h3>
            <ul>
                {{#each stars}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p>{{description}}</p>
            <p>
                {{#each showtimes}}
                {{this}} |
                {{/each}}
            </p>

        </div>

    </div>
</div>